{
    "handler": "Microsoft.Compute.MultiVm",
    "version": "0.0.1-preview",
    "parameters": {
        "basics": [
            {
                "name": "clusterNamePrefix",
                "type": "Microsoft.Common.TextBox",
                "label": "Cluster name prefix",
                "toolTip": "This will be used to create the three VM names, Public IP names, NIC names, Load Balancer names, and Virtual Network name: Using the default prefix {TestFlight} would make the VM names = TestFlightVm1 TestFlightVm2 TestFlightVm3 ",
                "defaultValue": "TestFlight",
                "constraints": {
                    "required": true,
                    "regex": "^[a-zA-Z0-9]{4,12}$",
                    "validationMessage": "Name must be 4-12 chars in length."
                }
            },
            {
                "name": "adminUsername",
                "type": "Microsoft.Compute.UserNameTextBox",
                "label": "Admin username",
                "toolTip": "The admin username entered here will be used on each of the three test flight VMs.",
                "defaultValue": "kuser-root",
                "constraints": {
                    "required": true
                },
                "osPlatform": "Windows"
            },
            {
                "name": "adminPassword",
                "type": "Microsoft.Compute.CredentialsCombo",
                "label": {
                    "password": "Admin password",
                    "confirmPassword": "Confirm password"
                },
                "toolTip": {
                    "password": "The admin password entered here will be used on each of the three test flight VMs."
                },
                "constraints": {
                    "required": true
                },
                "osPlatform": "Windows"
            }
        ],
        "steps": [
            {
                "name": "wordpressInfo",
                "label": "WordPress information",
                "subLabel": {
                    "preValidation": "Provide WordPress information",
                    "postValidation": "Done"
                },
                "bladeTitle": "WordPress information",
                "elements": [
                    {
                        "name": "webSiteHostingPlan",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Web site hosting plan",
                        "toolTip": "",
                        "defaultValue": "wordpressMySQLplan",
                        "constraints": {
                            "required": true,
                            "regex": "^[a-z0-9A-Z]{1,40}$",
                            "validationMessage": "Only alphanumeric characters are allowed, and the value must be 1-40 characters long."
                        }
                    }
                ]
            }
        ],
        "outputs": {
            "location": "[location()]",
            "clusterNamePrefix": "[basics('clusterNamePrefix')]",
            "adminUsername": "[basics('adminUsername')]",
            "adminPassword": "[basics('adminPassword')]",
            "storageAccountNewOrExisting": "[basics('storageAccount').newOrExisting]",
            "StorageAccountName": "[basics('storageAccount').name]",
            "storageAccountType": "[basics('storageAccount').type]",
			"existingStorageAccountRG": "[basics('storageAccount').resourceGroup]",
            "publicDnsNamePrefix": "[basics('publicDnsNamePrefix')]",
            "vmSize": "[basics('vmSize')]"
        }
    }
}