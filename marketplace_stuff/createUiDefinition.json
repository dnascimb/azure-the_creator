{
    "handler": "Microsoft.Compute.MultiVm",
    "version": "0.0.1-preview",
    "parameters": {
        "basics": [
            {
                "name": "vmNamePrefix",
                "type": "Microsoft.Common.TextBox",
                "label": "VM name prefix",
                "toolTip": "This will be used to create the three VM names: *prefix*VM1 *prefix*VM2 *prefix*VM3",
                "defaultValue": "TestFlight",
                "constraints": {
                    "required": true,
                    "regex": "^[a-zA-Z0-9]{4,12}$",
                    "validationMessage": "Name must be 4-12 chars in length."
                }
            },
            {
                "name": "adminUsername",
                "type": "Microsoft.Compute.UserNameTextBox",
                "label": "Admin Username",
                "toolTip": "The admin username will be used for each of the three test tlight VMs.",
                "constraints": {
                    "required": true
                    },
                "osPlatform": "Windows"
            },
            {
                "name": "adminPassword",
                "type": "Microsoft.Compute.CredentialsCombo",
                "label": {
                    "password": "Admin Password",
                    "confirmPassword": "Confirm password"
                },
                "toolTip": {
                    "password": "The admin password will be used for each of the three test tlight VMs."
                },
                "constraints": {
                    "required": true
                },
                "osPlatform": "Windows"
            }
        ],
        "steps": [
            {
                "name": "infrastructureConfig",
                "label": "Infrastructure settings",
                "subLabel": {
                    "preValidation": "Configure the infrastructure settings",
                    "postValidation": "Done"
                },
                "bladeTitle": "Infrastructure settings",
                "elements": [
                    {
                        "name": "storageAccount",
                        "type": "Microsoft.Storage.StorageAccountSelector",
                        "label": "Storage account for the three VHDs",
                        "constraints": {
                            "required": true
                        },
                        "defaultValue": {
                            "type": "Standard_LRS"
                        }
                    },
                    {
                        "name": "vmSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Virtual Machine Size:",
                        "toolTip": "The compute size of the three virtual machines.",
                        "recommendedSizes": [
                            "Standard_A2"
                        ],
                        "constraints": {
                            "allowedSizes": [
                              "Standard_D1",
                              "Standard_D2",
                              "Standard_D3",
                              "Standard_D4",
                              "Standard_A1",
                              "Standard_A2"
                            ],
                            "required": true
                        },
                        "osPlatform": "Windows",
                        "imageReference": {
                            "publisher": "MicrosoftWindowsServer",
                            "offer": "WindowsServer",
                            "sku": "2012-R2-Datacenter"
                        },
                        "count": 3
                    },
                    {
                        "name": "publicDnsNamePrefix",
                        "type": "Microsoft.Common.TextBox",
                        "label": "Public DNS Prefix:",
                        "toolTip": "[concat('The DNS prefix must be unique and will be used to create all three public DNS. The full DNS will be dns_prefix-VM1.', location(), '.cloudapp.azure.com')]",
                        "defaultValue": "change-me-to-be-something-unique",
                        "constraints": {
                            "required": true,
                            "regex": "^[a-z][a-z0-9-]{1,61}[a-z0-9]$",
                            "validationMessage": "Only alphanumeric characters and hyphen are allowed, and the value must be less than 64 characters long."
                        }
                    }

                ]
            }
        ],
        "outputs": {
            "location": "[location()]",
            "vmNamePrefix": "[steps('basics').vmNamePrefix]",
            "adminUsername": "[steps('basics').adminUsername]",
            "adminPassword": "[steps('basics').adminPassword]",
            "storageAccountNewOrExisting" : "[steps('infrastructureConfig').storageAccount.newOrExisting]",
            "StorageAccountName": "[steps('infrastructureConfig').storageAccount.name]",
            "storageAccountType": "[steps('infrastructureConfig').storageAccount.type]",
			"existingStorageAccountRG": "[steps('infrastructureConfig').storageAccount.resourceGroup]",
            "publicDnsNamePrefix": "[steps('infrastructureConfig').publicDnsNamePrefix]",
            "vmSize": "[steps('infrastructureConfig').vmSize]"
        }
    }
}